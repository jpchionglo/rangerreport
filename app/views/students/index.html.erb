<div class="page-header">
  <h1>    List of Students  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Grade</th>
        <th>Homeroom</th>
        <th>House</th>
        <th>Absences</th>
        <th>Attendance</th>
        <th>Tardies</th>
        <th>Track</th>
        <th>Hrs.</th>
        <th>Current UGPA</th>
        <th>Cumm. UGPA</th>
        <th>Cumm. WGPA</th>
        <th>Rank</th>
        <th>Size</th>
        <th>Credits</th>
        <th>Detentions</th>
        <th>Eligible</th>
        <th>Total A's</th>
        <th>Total B's</th>
        <th>Total C's</th>
        <th>Total D's</th>
        <th>Total F's</th>
        <th>Date Created</th>
        <th>Last Updated</th>
        <th>Options</th>
        
      </tr>

      <% @item.each do |pointer| %>
      <tr>
        <%= link_to student_path(pointer.id) do %>
          <td><%= pointer.name %></td>
          <td><%= pointer.grade %></td>
          <td><%= pointer.homeroom %></td>
          <td><%= pointer.house %></td>
          <td><%= pointer.absences %></td>
          <td><%= pointer.attendance %></td>
          <td><%= pointer.tardies %></td>
          <td><%= pointer.track %></td>
          <td><%= pointer.servhrs %></td>
          <td><%= pointer.cgpa %></td>
          <td><%= pointer.ugpa %></td>
          <td><%= pointer.wgpa %></td>
          <td><%= pointer.crank %></td>
          <td><%= pointer.csize %></td>
          <td><%= pointer.credits %></td>
          <td><%= pointer.detentions %></td>
          <td><%= pointer.eligible %></td>
          <td><%= pointer.totala %></td>
          <td><%= pointer.totalb %></td>
          <td><%= pointer.totalc %></td>
          <td><%= pointer.totald %></td>
          <td><%= pointer.totalf %></td>
           <!-- format the display of the time -->
          <td> <%= pointer.created_at.strftime("%b %e, %l:%M %p") %></td> <!-- http://www.foragoodstrftime.com/ -->
          <td> <%= pointer.updated_at.strftime("%b %e, %l:%M %p") %></td>
          
        <% end %> 
        <td>
         
          <div class="btn btn-primary"> <%= link_to "Show", student_url(pointer.id) %> </div>
          <div class="btn btn-warning"> <%= link_to "Edit", edit_student_url(pointer.id) %> </div>
          <div class="btn btn-danger">  <%= link_to "Delete", student_url(pointer.id), :method => :delete, :data => {:confirm => "Are you sure?" } %> </div>
        </td>
      </tr>
      <% end %>
    </table>
    
  </div>
</div>